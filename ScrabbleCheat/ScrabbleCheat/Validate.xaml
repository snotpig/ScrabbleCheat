<Window x:Class="Snotsoft.Validation.Validate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Validate" Height="128" Width="216" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBox Name="txtMsg1" Height="30" Margin="2" FontSize="16" BorderThickness="0"></TextBox>
        <TextBox Name="txtMsg2" Height="30" Margin="2" FontSize="16" BorderThickness="0" Visibility="Collapsed"></TextBox>
        <TextBox Name="txtCode" Height="30" Margin="2" FontSize="20" CharacterCasing="Upper" KeyDown="txtCode_KeyDown"/>
        <Button Name="button" Width="60" Margin="2" Click="Button_Click">Enter</Button>
    </StackPanel>
</Window>
