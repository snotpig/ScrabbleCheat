<Window x:Class="ScrabbleCheat.PromptSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm" Height="120" Width="210"
        AllowsTransparency="True" WindowStartupLocation="Manual"
        WindowStyle="None" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="lblMsg" Grid.ColumnSpan="2" FontSize="22" HorizontalContentAlignment="Center" Foreground="White"></Label>
        <Button Name="cmdYes" Style="{StaticResource squareButton}" Grid.Row="1" Width="40" Height="20" Focusable="False" 
                                                                                                Click="cmdYes_Click" Background="LightPink">Yes</Button>
        <Button Name="cmdCancel" Style="{StaticResource squareButton}" Grid.Column="1" Grid.Row="1" Width="40" Height="20"
                                                                                                Focusable="False" Click="cmdCancel_Click">No</Button>
    </Grid>
</Window>
