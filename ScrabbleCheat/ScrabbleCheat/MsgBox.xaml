<Window x:Class="ScrabbleCheat.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error!" Height="100" Width="170" 
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="2" Background="{StaticResource windowBackground}" CornerRadius="5" BorderBrush="LightGreen" BorderThickness="2"></Border>
        <Label Name="txt" Height="40" Foreground="White" HorizontalContentAlignment="Center" Background="Transparent" FontSize="20">ghj</Label>
        <Button Name="cmdOK" Grid.Row="1" Width="30" Height="20" Style="{StaticResource squareButton}" Click="cmdOK_Click">OK</Button>
    </Grid>
</Window>
